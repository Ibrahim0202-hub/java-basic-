import React, { useState, useCallback, useEffect } from 'react';

function App() {
  const [length, setLength] = useState(8);
  const [numbers, setNumbers] = useState(false);
  const [chaAllowed, setChaAllowed] = useState(false);
  const [password, setPassword] = useState('');

  // Generates password based on current state
  const generatePassword = useCallback(() => {
    let pass = '';
    let str = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ';

    if (chaAllowed) {
      str += '!@#$%^&*()_+{}|:"<>?[];,./-=';
    }
    if (numbers) {
      str += '0123456789';
    }

    for (let i = 0; i < length; i++) {
      let charIndex = Math.floor(Math.random() * str.length);
      pass += str.charAt(charIndex);
    }

    setPassword(pass);
  }, [length, numbers, chaAllowed]);

  // Generate password whenever settings change
  useEffect(() => {
    generatePassword();
  }, [length, numbers, chaAllowed, generatePassword]);

  // Copy password to clipboard
  const handleCopy = () => {
    navigator.clipboard.writeText(password);
    alert('Password copied!');
  };

  return (
    <div className='max-w-md mx-auto shadow-md rounded-2xl shadow-gray-600 px-4 text-white bg-gray-800 text-center mt-5 p-4'>
      <h1 className='text-3xl mb-4'>Password Generator</h1>
      
      <div className="flex mb-4">
        <input 
          type='text' 
          value={password} 
          readOnly 
          className='bg-amber-50 text-black rounded-l-2xl px-4 w-full'
        />
        <button 
          onClick={handleCopy}
          className='bg-blue-700 px-4 rounded-r-2xl'
        >
          Copy
        </button>
      </div>

      <div className='flex flex-col gap-2 items-start'>
        <div className="flex items-center justify-between w-full">
          <input 
            type='range' 
            min='8' 
            max='20' 
            value={length} 
            onChange={(e) => setLength(Number(e.target.value))} 
            className='w-full'
          />
          <span className='ml-2'>Length: {length}</span>
        </div>

        <div className="flex items-center gap-2">
          <input 
            type='checkbox'  
            checked={numbers}
            onChange={() => setNumbers(!numbers)} 
          />
          <label>Include Numbers</label>
        </div>

        <div className="flex items-center gap-2">
          <input 
            type='checkbox' 
            checked={chaAllowed}
            onChange={() => setChaAllowed(!chaAllowed)} 
          />
          <label>Include Special Characters</label>
        </div>
      </div>
    </div>
  );
}

export default App;
